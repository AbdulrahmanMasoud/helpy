            "post": {
                "tags": [
                    "User"
                ],
                "summary": "ٌLogout From Helpy",
                "description": "ٌYou Must Add Token To get access Logout",
                "operationId": "userLogout",
                "responses": {
                    "400": {
                        "description": "Bad Request"
                    },
                    "200": {
                        "description": "Success Request",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
